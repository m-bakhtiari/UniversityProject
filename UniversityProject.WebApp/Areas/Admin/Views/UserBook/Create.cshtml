@model UniversityProject.Core.DTOs.UserBookDto

<title>افزودن امانت جدید</title>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>افزودن کتاب جدید</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active"> <a href="/Admin/UserBook">لیست امانات</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <!-- form start -->
                <form role="form" action="@ViewBag.ReturnUrl" method="post">
                    <div class="box-body">
                        <input type="hidden" value="@Model.Id" asp-for="Id" />
                        <div>
                            <label>کتاب</label>
                            <select class="form-control selectBook select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true" asp-for="BookId">
                                @foreach (var item in Model.BookTitles)
                                {
                                    <option value="@item.Id">@item.Title</option>
                                }
                            </select>
                        </div>
                        <div>
                            <label>کاربر</label>
                            <select class="form-control selectUser select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true" asp-for="UserId">
                                @foreach (var item in Model.Users)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div>
                            <label>تاریخ شروع</label>
                            <input type="text" id="date1" asp-for="StartDate" class="form-control" autocomplete="off">
                        </div>
                        <div>
                            <label>تاریخ پایان</label>
                            <input type="text" id="date2" asp-for="EndDate" class="form-control" autocomplete="off">
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">ارسال</button>
                        <a href="/Admin/UserBook" class="pull-left btn btn-warning">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Styles
{
    <link href="/Admin/css/select2.min.css" rel="stylesheet" />
    <link href="/Admin/css/kamadatepicker.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="/Admin/js/select2.full.min.js"></script>
    <script src="/Admin/js/kamadatepicker.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('.selectBook').select2();
            $('.selectUser').select2();

            kamaDatepicker('date1', { buttonsColor: "red" });
            kamaDatepicker('date2', { buttonsColor: "red" });

            if ('@ViewBag.ShowModal'=='true') {
                var modal = $('#myModal');
                modal.find('.modal-body p').html("@ViewBag.ModalMessage");
                modal.find('.modal-footer a').attr("href", "/Admin/User/Create");
                $('#myModal').modal('show');
            }
        });
    </script>
}
