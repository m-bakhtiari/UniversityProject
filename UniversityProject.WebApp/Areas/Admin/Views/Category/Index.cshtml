@model List<UniversityProject.Data.Entities.Category>

<title>دسته بندی کتاب ها</title>
@{
    var counter = 1;
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        جدول ها
        <small>پیشرفته</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a href="/Admin/Category" class="active">جدول</a></li>
    </ol>
</section>

<section class="content-header">
    <a class="btn btn-success" href="/Admin/Category/Create">افزودن گروه جدید</a>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">جدول داده مثال ۲</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <th>زیر گروه</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(x => x.ParentId == null))
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td><b>@item.Title</b></td>
                                    <td>
                                        @foreach (var sub in Model.Where(x => x.ParentId == item.Id))
                                        {
                                            <div style="margin-bottom: 10px">
                                                <i class="fa fa-circle-o text-yellow"></i>
                                                @sub.Title
                                                <a class="btn btn-success btn-xs" href="/Admin/Category/Update/@sub.Id">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a class="btn btn-warning btn-xs" onclick="DeleteGroup(@sub.Id,'@sub.Title')">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" href="/Admin/Category/Create/@item.Id">زیر گروه</a>
                                        <a class="btn btn-success" href="/Admin/Category/Update/@item.Id">ویرایش</a>
                                        <a class="btn btn-danger" onclick="DeleteGroup(@item.Id,'@item.Title')">حذف</a>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <th>زیر گروه</th>
                                <th>عملیات</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- ./wrapper -->
<!-- DataTables -->
@section Scripts
{
    <script src="/Admin/js/jquery.dataTables.min.js"></script>
    <script src="/Admin/js/dataTables.bootstrap.min.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            $('#example1').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            });
        });

        function DeleteGroup(id, title) {
            var modal = $('#myModal');
            modal.find('.modal-body p').text("آیا از حذف " + title + " اطمینان دارید");
            modal.find('.modal-footer a').attr("href", "/Admin/Category/Delete/" + id);
            $('#myModal').modal('show');
        }
    </script>
}