@using UniversityProject.Core.Utils
@model List<UniversityProject.Data.Entities.Book>

<title>دسته بندی کتاب ها</title>
@{
    var counter = 1;
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        جدول ها
        <small>پیشرفته</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a href="/Admin/Book" class="active">جدول</a></li>
    </ol>
</section>

<section class="content-header">
    <a class="btn btn-success" href="/Admin/Book/Create">افزودن گروه جدید</a>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">جدول داده مثال ۲</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <th>نام نویسنده</th>
                                <th>نام ناشر</th>
                                <th>تاریخ انتشار</th>
                                <th>در دسترس</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td><b>@item.Title</b></td>
                                    <td>@item.AuthorName</td>
                                    <td>@item.PublisherName</td>
                                    <td>@item.PublishDate</td>
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="label label-success"><i class="fa fa-check-circle"></i></span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger"><i class="fa fa-close"></i></span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-success" href="/Admin/Book/Update/@item.Id">ویرایش</a>
                                        <a class="btn btn-danger" onclick="DeleteGroup(@item.Id,'@item.Title')">حذف</a>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <th>زیر گروه</th>
                                <th>عملیات</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- ./wrapper -->
<!-- DataTables -->
@section Scripts
{
    <script src="/Admin/js/jquery.dataTables.min.js"></script>
    <script src="/Admin/js/dataTables.bootstrap.min.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            $('#example1').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            });
        });

        function DeleteGroup(id, title) {
            var modal = $('#myModal');
            modal.find('.modal-body p').text("آیا از حذف " + title + " اطمینان دارید");
            modal.find('.modal-footer a').attr("href", "/Admin/Book/Delete/" + id);
            $('#myModal').modal('show');
        }
    </script>
}