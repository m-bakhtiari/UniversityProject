@using UniversityProject.Core.Utils
@model UniversityProject.Data.Entities.Message

<title>جزییات پیام</title>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>جزییات پیام @Model.Name</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active"> <a href="/Admin/Message">لیست پیام ها</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <!-- form start -->
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label>تاریخ ثبت</label>
                            <input type="text" disabled="disabled" class="form-control" value="@Model.RecordDate.ToShamsi()">
                        </div>
                        <div class="form-group col-md-5">
                            <label>شماره تماس</label>
                            <input type="text" disabled="disabled" class="form-control" value="@Model.Phone">
                        </div>
                        <div class="form-group col-md-5">
                            <label>ایمیل</label>
                            <input type="text" disabled="disabled" class="form-control" value="@Model.Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>نام و نام خانوادگی</label>
                        <input type="text" disabled="disabled" class="form-control" value="@Model.Name">
                    </div>
                    <div class="form-group">
                        <label>موضوع</label>
                        <input type="text" disabled="disabled" class="form-control" value="@Model.Subject">
                    </div>
                    <div class="form-group">
                        <label>متن پیام</label>
                        <input type="text" disabled="disabled" class="form-control" value="@Model.Text">
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @if (Model.ReadingStatus)
                    {
                        <a href="/Admin/Message/UpdateStatus/@Model.Id" class="btn btn-warning">دیده نشد</a>
                    }
                    else
                    {
                        <a href="/Admin/Message/UpdateStatus/@Model.Id" class="btn btn-success">دیده شد</a>
                    }
                    <a href="/Admin/Message" class="btn btn-primary pull-left">بازگشت</a>
                </div>
            </div>
        </div>
    </div>
</section>
