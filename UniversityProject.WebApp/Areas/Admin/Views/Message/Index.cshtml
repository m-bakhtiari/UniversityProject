@using UniversityProject.Core.Utils
@model List<UniversityProject.Data.Entities.Message>

<title>پیام ها</title>
@{
    var counter = 1;
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>پیام ها</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a href="/Admin/Message" class="active">پیام ها</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>تاریخ</th>
                                <th>نام</th>
                                <th>عنوان</th>
                                <th>شماره تماس</th>
                                <th>ایمیل</th>
                                <th>متن</th>
                                <th>دیده شد</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>@item.RecordDate.ToShamsi()</td>
                                    <td><b>@item.Name</b></td>
                                    <td>@item.Subject</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>
                                        @if (item.ReadingStatus)
                                        {
                                            <i class='fa fa-check-circle fa-2x text-green'></i>
                                        }
                                        else
                                        {
                                            <i class='fa fa-close fa-2x text-red'></i>
                                        }
                                    </td>
                                    <td>@item.Text</td>
                                    <td>
                                        @if (item.ReadingStatus)
                                        {
                                        <a class="btn btn-danger" href="/Admin/Message/UpdateStatus/@item.Id">دیده نشده</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-primary" href="/Admin/Message/UpdateStatus/@item.Id">دیده شد</a>
                                        }
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>تاریخ</th>
                                <th>نام</th>
                                <th>عنوان</th>
                                <th>شماره تماس</th>
                                <th>ایمیل</th>
                                <th>متن</th>
                                <th>عملیات</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- ./wrapper -->
<!-- DataTables -->
@section Scripts
{
    <script src="/Admin/js/jquery.dataTables.min.js"></script>
    <script src="/Admin/js/dataTables.bootstrap.min.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            $('#example1').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            });
        });

        function DeleteGroup(id, title) {
            var modal = $('#myModal');
            modal.find('.modal-body p').text("آیا از حذف " + title + " اطمینان دارید");
            modal.find('.modal-footer a').attr("href", "/Admin/Category/Delete/" + id);
            $('#myModal').modal('show');
        }
    </script>
}