@model UniversityProject.Core.DTOs.LoginDto

<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">خانه</a></li>
                <li class="breadcrumb-item active" aria-current="page">ورود / ثبت نام</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/Images/Static/page-header-bg.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab" aria-controls="signin-2" aria-selected="true">کد ارسالی</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
                            <form action="/ResetPassword" method="post">
                                <div class="form-group">
                                    <p class="alert alert-primary">کد @Model.Code را وارد نمایید</p>
                                    <label for="singin-email-2" class="mt-2">کد *</label>
                                    <input type="hidden" value="@Model.Username" asp-for="Username"/>
                                    <input type="text" class="form-control" asp-for="Id" required="required" placeholder="کد ارسالی"
                                           oninvalid="this.setCustomValidity('کد ارسالی را وارد نمایید')" oninput="this.setCustomValidity('')">
                                </div><!-- End .form-group -->

                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>ورود</span>
                                        <i class="icon-long-arrow-left"></i>
                                    </button>
                                </div><!-- End .form-footer -->
                            </form>
                        </div><!-- .End .tab-pane -->
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main>

@section Scripts
{
    <script>
        $(document).ready(function () {
            if ('@ViewBag.ErrorModal' == 'true') {
                $("#info-text").html('@ViewBag.ErrorMessage');
                $("#info-modal").modal('show');
            }
        });
    </script>
}
