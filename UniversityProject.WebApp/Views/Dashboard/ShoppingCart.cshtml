@model UniversityProject.Core.DTOs.DashboardDto
@{
    var counter = 1;
    var cartCounter = 1;
    var oldCounter = 1;
}

<main class="main">
    <div class="page-header text-center" style="background-image: url('/Images/Static/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">داشبورد<span></span></h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">خانه</a></li>
                <li class="breadcrumb-item active" aria-current="page">امانات</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="dashboard">
            <div class="container">
                <div class="row">
                    <aside class="col-md-4 col-lg-3">
                        <ul class="nav nav-dashboard flex-column mb-3 mb-md-0" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link">جزئیات حساب کاربری</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/ShoppingCart">امانات</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/FavoriteBook">لیست علاقه مندی</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/History">تاریخچه</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Logout">خروج از حساب کاربری</a>
                            </li>
                        </ul>
                    </aside><!-- End .col-lg-3 -->

                    <div class="col-md-8 col-lg-9">
                        <div class="tab-content">
                            <div class="tab-pane fade active show">
                                @if (Model.ShoppingCartBooks.Any())
                                {
                                    <div class="col-md-6">
                                        <a class="btn btn-success" href="/FinalizeCart">نهایی کردن امانات</a>
                                    </div>
                                    <div class="container">
                                        <table class="table table-wishlist table-mobile">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>کتاب</th>
                                                    <th>تعداد روز قابل استفاده</th>
                                                    <th>وضعیت</th>
                                                    <th>عملیات</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item in Model.ShoppingCartBooks)
                                                {
                                                    <tr>
                                                        <td>@cartCounter</td>
                                                        <td class="product-col">
                                                            <div class="product">
                                                                <figure class="product-media">
                                                                    <a href="/Book/@item.Book.Id">
                                                                        <img src="/Images/Books/@item.Book.ImageName" alt="@item.Book.Title">
                                                                    </a>
                                                                </figure>
                                                                <h3 class="product-title">
                                                                    <a href="/Book/@item.Book.Id">@item.Book.Title</a>
                                                                </h3><!-- End .product-title -->
                                                            </div><!-- End .product -->
                                                        </td>
                                                        <td>@item.Book.UsableDays روز</td>
                                                        <td>
                                                            <span class="badge @(item.IsAvailable ? "badge-success" : "badge-warning")">
                                                                @(item.IsAvailable ? "موجود" : "ناموجود")
                                                            </span>
                                                        </td>
                                                        <td class="action-col">
                                                            <button class="btn btn-block btn-outline-primary-2" onclick="AddToFavoriteBook(@item.Book.Id)" style="cursor: pointer">
                                                                <i class="icon-cart-plus"></i>افزودن به علاقه مندی
                                                            </button>
                                                        </td>
                                                        <td class="remove-col text-left">
                                                            style="cursor: pointer"
                                                            <a class="btn-remove" href="/DeleteItemShoppingCart/@item.Book.Id" style="cursor: pointer">
                                                                <i class="icon-close"></i>
                                                            </a>
                                                        </td>

                                                    </tr>
                                                    cartCounter++;
                                                }
                                            </tbody>
                                        </table><!-- End .table table-wishlist -->
                                        <div class="cart-bottom">
                                            <a href="/Dashboard" class="btn btn-outline-dark-2 ml-auto display-7 px-5">
                                                <span>به روز رسانی امانات</span><i class="icon-refresh"></i>
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>هیچ کتابی وجود ندارد</p>
                                    <div class="cart-bottom">
                                        <a href="/Dashboard" class="btn btn-outline-dark-2 ml-auto display-7 px-5">
                                            <span>به روز رسانی امانات</span><i class="icon-refresh"></i>
                                        </a>
                                    </div>
                                    <a href="/Library" class="btn btn-outline-primary-2">
                                        <span>
                                            رفتن به
                                            کتابخانه
                                        </span><i class="icon-long-arrow-left"></i>
                                    </a>
                                }

                            </div><!-- .End .tab-pane -->
                        </div>
                    </div><!-- End .col-lg-9 -->
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .dashboard -->
    </div><!-- End .page-content -->
</main>

@section Scripts
{
    <script>
        if ('@ViewBag.ShowModal' == 'true') {
            $("#errorText").html("@ViewBag.ModalText");
            $("#errorModal").modal("show");
        }
        else if ('@ViewBag.InfoModal'=='true') {
            $("#info-text").html("@ViewBag.ModalText");
            $("#info-modal").modal("show");
        }
    </script>
}

