@using UniversityProject.Core.Utils
@model UniversityProject.Core.DTOs.DashboardDto
@{
    var counter = 1;
    var cartCounter = 1;
    var oldCounter = 1;
}

<main class="main">
    <div class="page-header text-center" style="background-image: url('/Images/Static/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">داشبورد<span></span></h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">خانه</a></li>
                <li class="breadcrumb-item active" aria-current="page">داشبورد</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="dashboard">
            <div class="container">
                <div class="row">
                    <aside class="col-md-4 col-lg-3">
                        <ul class="nav nav-dashboard flex-column mb-3 mb-md-0" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" id="tab-dashboard-link" data-toggle="tab" href="#tab-dashboard" role="tab" aria-controls="tab-dashboard" aria-selected="false">داشبورد</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-orders-link" data-toggle="tab" href="#tab-orders" role="tab" aria-controls="tab-orders" aria-selected="false">سبد خرید</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-downloads-link" data-toggle="tab" href="#tab-downloads" role="tab" aria-controls="tab-downloads" aria-selected="false">لیست علاقه مندی</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-address-link" data-toggle="tab" href="#tab-address" role="tab" aria-controls="tab-address" aria-selected="false">تاریخچه</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="tab-account-link" data-toggle="tab" href="#tab-account" role="tab" aria-controls="tab-account" aria-selected="true">جزئیات حساب کاربری</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Logout">خروج از حساب کاربری</a>
                            </li>
                        </ul>
                    </aside><!-- End .col-lg-3 -->

                    <div class="col-md-8 col-lg-9">
                        <div class="tab-content">
                            <div class="tab-pane fade" id="tab-dashboard" role="tabpanel" aria-labelledby="tab-dashboard-link">

                            </div><!-- .End .tab-pane -->

                            <div class="tab-pane fade" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
                                @if (Model.ShoppingCartBooks.Any())
                                {
                                    <div class="container">
                                        <table class="table table-wishlist table-mobile">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>کتاب</th>
                                                    <th>تعداد روز قابل استفاده</th>
                                                    <th>عملیات</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr>
                                                    @foreach (var item in Model.ShoppingCartBooks)
                                                    {
                                                        <td>@cartCounter</td>
                                                        <td class="product-col">
                                                            <div class="product">
                                                                <figure class="product-media">
                                                                    <a href="#">
                                                                        <img src="/Images/Books/@item.Book.ImageName" alt="@item.Book.Title">
                                                                    </a>
                                                                </figure>
                                                                <h3 class="product-title">
                                                                    <a href="/Product/@item.Book.Id">@item.Book.Title</a>
                                                                </h3><!-- End .product-title -->
                                                            </div><!-- End .product -->
                                                        </td>
                                                        <td>@item.Book.UsableDays</td>
                                                        <td><span class="badge @(item.IsAvailable ? "badge-success" : "badge-warning")">@(item.IsAvailable ? "موجود" : "ناموجود")</span></td>
                                                        <td class="remove-col text-left"><button class="btn-remove"><i class="icon-close"></i></button></td>
                                                        cartCounter++;
                                                    }
                                                </tr>
                                            </tbody>
                                        </table><!-- End .table table-wishlist -->
                                        <div class="cart-bottom">
                                            <a href="/Dashboard" class="btn btn-outline-dark-2 ml-auto display-7 px-5">
                                                <span>
                                                    به روز رسانی
                                                    سبد
                                                    خرید
                                                </span><i class="icon-refresh"></i>
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>سفارش جدیدی وجود ندارد</p>
                                    <a href="/Library" class="btn btn-outline-primary-2">
                                        <span>
                                            رفتن به
                                            کتابخانه
                                        </span><i class="icon-long-arrow-left"></i>
                                    </a>
                                }

                            </div><!-- .End .tab-pane -->

                            <div class="tab-pane fade" id="tab-downloads" role="tabpanel" aria-labelledby="tab-downloads-link">
                                @if (Model.FavoriteBooks.Any())
                                {
                                    <div class="container">
                                        <table class="table table-wishlist table-mobile">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>کتاب</th>
                                                    <th>تعداد روز قابل استفاده</th>
                                                    <th>وضعیت</th>
                                                    <th>عملیات</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item in Model.FavoriteBooks)
                                                {
                                                    <tr>
                                                        <td>@counter</td>
                                                        <td class="product-col">
                                                            <div class="product">
                                                                <figure class="product-media">
                                                                    <a href="#">
                                                                        <img src="/Images/Books/@item.Book.ImageName" alt="@item.Book.Title">
                                                                    </a>
                                                                </figure>
                                                                <h3 class="product-title">
                                                                    <a href="/Product/@item.Book.Id">@item.Book.Title</a>
                                                                </h3><!-- End .product-title -->
                                                            </div><!-- End .product -->
                                                        </td>
                                                        <td>@item.Book.UsableDays</td>
                                                        <td><span class="badge @(item.IsAvailable ? "badge-success" : "badge-warning")">@(item.IsAvailable ? "موجود" : "ناموجود")</span></td>
                                                        <td class="action-col">
                                                            <button class="btn btn-block btn-outline-primary-2"><i class="icon-cart-plus"></i>افزودن به سبد خرید</button>
                                                        </td>
                                                        <td class="remove-col text-left"><button class="btn-remove"><i class="icon-close"></i></button></td>
                                                    </tr>
                                                    counter++;
                                                }
                                            </tbody>
                                        </table><!-- End .table table-wishlist -->
                                        <div class="cart-bottom">
                                            <a href="/Dashboard" class="btn btn-outline-dark-2 ml-auto display-7 px-5">
                                                <span>
                                                    به روز رسانی علاقه مندی ها
                                                </span><i class="icon-refresh"></i>
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>سفارش جدیدی وجود ندارد</p>
                                    <a href="/Library" class="btn btn-outline-primary-2">
                                        <span>
                                            رفتن به
                                            کتابخانه
                                        </span><i class="icon-long-arrow-left"></i>
                                    </a>
                                }
                            </div><!-- .End .tab-pane -->

                            <div class="tab-pane fade" id="tab-address" role="tabpanel" aria-labelledby="tab-address-link">
                                @if (Model.OldBooks.Any())
                                {
                                    <div class="container">
                                        <table class="table table-wishlist table-mobile">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>کتاب</th>
                                                    <th>تاریخ شروع</th>
                                                    <th>تاریخ پایان</th>
                                                    <th>تعداد روز قابل استفاده</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item in Model.OldBooks)
                                                {
                                                    <tr>
                                                        <td>@oldCounter</td>
                                                        <td class="product-col">
                                                            <div class="product">
                                                                <figure class="product-media">
                                                                    <a href="#">
                                                                        <img src="/Images/Books/@item.Book.ImageName" alt="@item.Book.Title">
                                                                    </a>
                                                                </figure>
                                                                <h3 class="product-title">
                                                                    <a href="/Product/@item.Id">@item.Book.Title</a>
                                                                </h3><!-- End .product-title -->
                                                            </div><!-- End .product -->
                                                        </td>
                                                        <td>@item.StartDate.ToShamsi()</td>
                                                        <td>@item.EndDate?.ToShamsi()</td>
                                                        <td>@item.Book.UsableDays</td>
                                                    </tr>
                                                    counter++;
                                                }
                                            </tbody>
                                        </table><!-- End .table table-wishlist -->
                                        <div class="cart-bottom">
                                            <a href="/Dashboard" class="btn btn-outline-dark-2 ml-auto display-7 px-5">
                                                <span>
                                                    به روز رسانی لیست
                                                </span><i class="icon-refresh"></i>
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>سفارش جدیدی وجود ندارد</p>
                                    <a href="/Library" class="btn btn-outline-primary-2">
                                        <span>
                                            رفتن به
                                            کتابخانه
                                        </span><i class="icon-long-arrow-left"></i>
                                    </a>
                                }
                            </div><!-- .End .tab-pane -->

                            <div class="tab-pane fade active show" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                                <form action="/UpdateUserInformation" method="post">
                                    <label>نام و نام خانوادگی *</label>
                                    <input type="text" class="form-control" asp-for="LoginDto.Name">
                                    <small class="form-text">
                                        این نام در قسمت نظرات و حساب کاربری شما
                                        نمایش داده می شود.
                                    </small>

                                    <label>شماره تماس *</label>
                                    <input type="text" class="form-control" asp-for="LoginDto.Username">

                                    <label>پسورد جدید</label>
                                    <input type="password" class="form-control" asp-for="LoginDto.Password">

                                    <label>تکرار پسورد جدید</label>
                                    <input type="password" class="form-control mb-2" asp-for="LoginDto.RePassword">

                                    <button type="submit" class="btn btn-outline-primary-2 float-right">
                                        <span>ذخیره تغییرات</span>
                                        <i class="icon-long-arrow-left"></i>
                                    </button>
                                </form>
                            </div><!-- .End .tab-pane -->
                        </div>
                    </div><!-- End .col-lg-9 -->
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .dashboard -->
    </div><!-- End .page-content -->
</main>

@section Scripts
{
    <script>
        function changePage(pageId) {
            $("#pageId").val(pageId);
            $("#bookSearch").submit();
        }
    </script>
}
